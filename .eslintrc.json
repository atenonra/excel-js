{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "google"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": "off",
    "comma-dangle": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "require-jsdoc": "off",
    "no-debugger": "off",
    "arrow-parens": [2, "as-needed", { "requireForBlockBody": false }],
    "indent": ["error", 2],
    "no-unused-vars": ["off"]
  }
}
